<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ("./partials/head") %>
    <title>Allproducts</title>
    <link rel="stylesheet" href="/css/allProducts.css" />
  </head>
  <%- include ("./partials/header") %>
 
  <body>
    <%if (productos[0]) {
        switch (productos[0].id_product_categoria) {
          case 1: %>
              <h2>Oficina</h2>
              <%break;
          case 1: %>
            <h2>Oficina</h2>
            <%break;
          case 2: %>
            <h2>Living</h2>
            <%break;
          case 3: %>
            <h2>Cocina</h2>
            <%break;
          case 4: %>
            <h2>Muebles TV</h2>
            <%break;
          case 5: %>
            <h2>Gaming</h2>
            <%break;
          case 6: %>
            <h2>Dormitorios</h2>
            <%break;
          default:%>
            <h2>Categorias </h2>
              <%break;
  } } %>
    
    <section class="main__ofertas">
      <% productos.forEach((product)=>{ %>
         <article> 
          <a href="/products/productDetail/<%= product.id %>">
          <div class="ofertas__imagen">
            <img src="/img/<%= product.image %>" alt="articulo5" />
          </div>
          </a>
          <div class="ofertas__precio">
            <h5> <%= product.name %></h5>
            <p class="precio__efectivo">$<%= product.price %></p>
            <p class="precio__descuento">% <%= product.discount %></p>
          </div>
          
        </article>
      <% }) %> 
    </section>
    
    <ul class="bar-nav-productos">
      <% for (let i = 1; i < 9; i++){ %>
      <li><a href=""><%=i%></a></li>
      <% }%>
  </ul>
  </body>
  <%- include("./partials/footer") %>
</html>
