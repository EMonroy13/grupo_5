<body>
    <%- include("./partials/header") %>
    <main>
        <div class="titulo-puntuacion__contenedor">
            <h2> <%= producto.name %></h2>
            </div>
        <section class="main__section">
            <article class="article__image">
              
                <div class="contenedor__img-producto">
                    <img src="/img/<%=producto.image %>" alt="imagen">
                </div>
            </article>
            <article class="article__info">
                
                <div class="contenedor-precio">
                    <div class="info-adicional__descripcion"><%= producto.description %></div>
                    <h3>$ <%= producto.price %></h3>
                    <p>En hasta 12 cuotas</p>
                </div>
                <div class="contenedor-botones">
                    <button type="button" class="boton-comprar">Boton de compra</button>
                    <button type="button" class="boton-carrito">Agregar al carrito</button>
                    <a href="" class="boton-favoritos">
                        <i class="fa-regular fa-heart"></i>
                        <p>Agregar a favoritos</p>
                    </a>
                    <!--                      boton de editar                       -->
                    
                    <div class="contenedor-botones-editar">
                            <a href="/products/productEdit/<%= producto.id %>">
                        <button type="button" class="boton-editar">Editar</button>
                        </a>
                    
                    <!--                    boton de eliminar                          -->
                        <form action="/products/delete/<%= producto.id %>?_method=DELETE" method="POST" >
                        <button type="submit" class="action-button delete">Eliminar</button>
                        </form>
                    </div>
            </article>
                

        
        </section>
