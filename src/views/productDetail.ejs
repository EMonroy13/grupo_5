        <section class="productos-relacionados">
            <h4>Productos relacionados</h4> 
            <div class="contenedor__producto-relacionado">
            <% productoRelacionado.forEach(product=>{ %>
                <% if (product.id != producto.id) { %>
                <article class="producto-relacionado">
                <div class="producto-relacionado__contenedor">
                <p><%= product.name %></p>  
                <p class="precio-relacionados"> $<%= product.price %> <b>-<%= product.discount %>%</b> </p>
                </div>
                <div class="contenedor__imagen-relacionados">
